<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>cart page</title>
    <link rel="stylesheet" href="../style1.css" />
    <style>
      #box div {
        display: flex;
        flex-direction: row;
        margin-bottom: 50px;
        border-top: 3px solid #e1e8ee;
        padding: 45px;
        box-shadow: inset 2px 2px 5px #babecc, inset -5px -5px 10px #ffffff73;
      }
      .container {
        max-width: 1240px;
        margin: auto;
      }

      #box div img {
        height: 170px;
        padding-right: 96px;
      }
      #box div h2 {
        width: 15%;
        padding-left: 20px;
        padding-top: 70px;
        font-size: 23px;
      }
      #box div h1 {
        width: 21%;
        padding-top: 62px;
        font-size: 29px;
      }
      #box div h3 {
        width: 14%;
        padding-top: 68px;
        font-size: 22px;
      }
      #box div button {
        width: 45px;
        height: 40px;
        background-color: #e1e8ee;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-size: 21px;
        margin-top: 63px;
      }
      #box div h4 {
        text-align: center;
        margin-top: 71px;
        font-size: 19px;
      }
      #plus {
        margin-right: 90px;
        margin-left: 25px;
      }
      #btn {
        margin-right: 25px;
        font-size: 27px !important;
        padding-bottom: 5px;
      }
      .title {
        margin: 50px 0px 50px 0px;
      }
    </style>
  </head>
  <body>
    <%- include("nav")%>
    <div class="container">
      <h1 class="title">Shopping Bag</h1>
      <div id="box"></div>
    </div>
  </body>
  <script>
    const display = (data) => {
      document.getElementById("box").innerHTML = "";
      data.map((element) => {
        let ele = element.productID;
        let img = document.createElement("img");
        img.src = ele.img;
        let title = document.createElement("h1");
        title.innerHTML = ele.title;
        let price = document.createElement("h3");
        price.innerHTML = ele.price;
        let btn1 = document.createElement("button");
        btn1.setAttribute("id", "btn");
        btn1.innerHTML = "-";
        let qty = document.createElement("h4");
        qty.innerHTML = element.qty;
        let btn2 = document.createElement("button");
        btn2.setAttribute("id", "plus");
        btn2.innerHTML = "+";
        let btn3 = document.createElement("h2");
        btn3.innerHTML = "X";
        let total_price = document.createElement("h3");
        total_price.innerHTML = ele.price;
        total_price.setAttribute("id", "total_price");

        let div = document.createElement("div");
        div.append(btn3, img, title, price, btn1, qty, btn2, total_price);
        document.getElementById("box").append(div);

        btn1.addEventListener("click", () => {
          if (element.qty > 1) {
            element.qty--;
            qty.innerHTML = element.qty;
            total_price.innerHTML = ele.price * element.qty;
          }
        });

        btn2.addEventListener("click", () => {
          element.qty++;
          qty.innerHTML = element.qty;
          total_price.innerHTML = ele.price * element.qty;
        });
      });
    };

    fetch("/product/cartdata")
      .then((Response) => Response.json())
      .then((data) => display(data))
      .then((error) => console.log(error));
  </script>
</html>
